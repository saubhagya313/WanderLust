<% layout('/layouts/boilerplate') -%>

<body>
       <style>
        .filters{
          display: flex;
          flex-wrap: wrap;
          
        }
        .filter{
          text-align: center;
          
          margin-top: 1rem;
          margin-right: 0.2rem;
          opacity: 0.7;
        }
        .filter:hover{
          opacity: 1;
          cursor: pointer;
        }
       </style>

      <div class="filters row  text-center">

  <div class="filter col-lg-1 col-md-2  col-sm-3 col-3 ">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>

  <div class="filter col-lg-1 col-md-2 col-sm-3 col-3">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>

  <div class="filter col-lg-1 col-md-2 col-sm-3 col-3">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </div>

  <div class="filter col-lg-1 col-md-2 col-sm-3 col-3">
   <i class="fa-solid fa-person-swimming"></i>
    <p>Pools</p>
  </div>

  
  <div class="filter col-lg-1 col-md-2 col-sm-3 col-3">
